<div class="container">
  <h2><%= data['title'] %></h2>

  <div class="flex">
    <div class="section__left">
      <div class="ratio-16-9" >
        <iframe src="https://www.youtube.com/embed/2oMp9kLUIPI" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>

    <div class="section__right">
      <carousel>
        <% data['collection'].each do |slide| %>
          <carousel-slide>
            <blockquote><%= slide['quote'] %></blockquote>
            <p><%= slide['author'] %></p>
          </carousel-slide>
        <% end %>
      </carousel>
    </div>
  </div>
</div>