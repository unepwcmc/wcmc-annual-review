<div class="section__container container">
  <div class="section__left">
    <div class="ratio-16-9" >
      <iframe src="https://www.youtube-nocookie.com/embed/12ZGntmetko" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>

  <div class="section__right">
    <carousel :slide-interval-length="8000" class="carousel--foreword">
      <% data['collection'].each do |slide| %>
        <carousel-slide :margin-size="0">
          <div class="blockquote--quotes">
            <blockquote class="blockquote__quote"><%= slide['quote'] %></blockquote>
            <span class="blockquote__author"><%= slide['author'] %></span>
          </div>
        </carousel-slide>
      <% end %>
    </carousel>
  </div>
</div>
